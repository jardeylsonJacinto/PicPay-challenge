// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  fullName String
  cpf      String @unique
  email    String @unique
  password String
  amount   Float  @default(0)
}

model Merchant {
  id       String @id @default(uuid())
  fullName String
  cnpj     String @unique
  email    String @unique
  password String
  amount   Float  @default(0)
}

model Transaction {
  id        String   @id @default(uuid())
  value     Float
  payer     String
  payee     String
  createdAt DateTime @default(now())
}
